@{
  Layout = "_Layout";
}

@using GearObsession.Models;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
}

@foreach (Item item in Model)
{
  <li>@Html.ActionLink($"{item.Name}", "Details", new { id = item.ItemId })</li>
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all items", "Index", "Items")</p>