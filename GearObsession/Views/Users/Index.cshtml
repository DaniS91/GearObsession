@{
  Layout = "_Layout";
}

@using GearObsession.Models;

<h1>Users</h1>

@if (@Model.Count == 0)
{
  <h3>No users have been added yet!</h3>
}

@foreach (User user in Model)
{
  <li>@Html.ActionLink($"{user.Name}", "Details", new { id = user.UserId })</li>
}
<a href="/Users/Create"><button type="button" class="btn btn-primary">Add New User</button></a>

